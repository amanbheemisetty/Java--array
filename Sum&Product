class Main {
  public static void main(String[] args) {
    Main obj = new Main();
    int[] inputarray={2,3,4};
    obj.SuPr(inputarray);
    
     
  }
  public void SuPr(int[] array)
  { 
      int sum=0;
    int product =1;
    for (int i=0;i <array.length;i++)
      {
        sum += array[i];
      }
    for (int i=0;i <array.length;i++)
      {
        product *= array[i];
      }
    System.out.println(sum +","+ product);
  }
    
}
